<h1>"Dashboard"</h1>
<ul class="nav nav-tabs">
    <li class="nav-item">
      <a class="nav-link active" data-bs-toggle="tab" href="#ownerSection">Owner Dashboard</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-bs-toggle="tab" href="#userSection">User Dashboard</a>
    </li>
  </ul>

<div class="tab-content">
<!-- Owner Section -->
  <div class="tab-pane fade show active" id="ownerSection">
    <div class="row mt-3">
      <div class="col-12">
        <ul>
        <br>
        <% @user.kitchens.each do |kitchen| %>
          <li><strong><%= link_to kitchen.name, kitchen_path(kitchen) %></strong></li>
          <%= link_to "Delete the kitchen", kitchen_path(kitchen), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
            <br>
            <% kitchen.bookings.each do |booking|%>
            <li> This kitchen is booked by <%=booking.user.email%></li>
            <li>From <%=booking.start_date.strftime("%B %d, %Y")%></li>
            <li>To <%=booking.end_date.strftime("%B %d, %Y")%></li>
            <br>

            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
<!-- User Section -->
  <div class="tab-pane fade show active" id="userSection">
    <div class="row mt-3">
      <div class="col-12">
        <ul>
          <% @user.bookings.each do |booking| %>
          <%= link_to "Delete the booking", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
            <li>You have booked <%= booking.kitchen.name%>
            <li>From <%= booking.start_date.strftime("%B %d, %Y")%></li>
            <li>To <%= booking.end_date.strftime("%B %d, %Y")%></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
