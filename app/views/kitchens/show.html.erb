
<div class="container">
  <div class="row">
    <div class="col-8">
      <div class="kitchen-booking-card">
        <h3><%= @kitchen.name %></h3>
        <% @kitchen.photos.each do |photo| %>
          <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill%>
        <% end %>
      </div>
      <div class="kitchen-booking-card">
      <h4>A bit more about this kitchen...</h4>
      <p>Adress : <%= @kitchen.address %></p>
      <p>Capacity : <%= @kitchen.capacity %></p>
      <p>Price/day : <%= @kitchen.price %></p>
      <p>Equipments : <%= @kitchen.equipment %></p>
      <img src="https://images.frandroid.com/wp-content/uploads/2016/01/google-maps.png" width="100%" height="400" alt="">
      </div>
    </div>
    <div class="col-4">
      <div class="kitchen-booking-card">
        <h4>Book this kitchen!</h4>
        <div class="mt-3">
          <%= simple_form_for [@kitchen, @booking] do |f| %>
          <%= f.input :start_date, as: :string, input_html: { data: { controller: "datepicker" }, placeholder: "27-12-2023" , class:""  }, label: "From" %>
          <%= f.input :end_date, as: :string, input_html: { data: { controller: "datepicker" }, placeholder: "28-12-2023" }, label: "To" %>
          <%= f.submit 'Book', class: "btn-booking"%>
          <% end %>
        </div>
      </div>
      <div class="kitchen-booking-card">
        <h4>Details</h4>
        <p>3 persons</p>
        <p>Total price : 300 â‚¬</p>
      </div>
    </div>
  </div>
</div>
