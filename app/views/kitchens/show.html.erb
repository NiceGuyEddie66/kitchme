<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1><%= @kitchen.name %></h1>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">Address</th>
            <td><%= @kitchen.address %></td>
          </tr>
          <tr>
            <th scope="row">Capacity</th>
            <td><%= @kitchen.capacity %></td>
          </tr>
          <tr>
            <th scope="row">Price</th>
            <td><%= @kitchen.price %></td>
          </tr>
          <tr>
            <th scope="row">Equipment</th>
            <td><%= @kitchen.equipment %></td>
          </tr>
          <% @kitchen.photos.each do |photo| %>
            <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
          <% end %>
        </tbody>
      </table>

      </div>
    </div>
    <%= link_to "Delete the kitchen", @kitchen, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>

    <div>
      <%= simple_form_for [@kitchen, @booking] do |f| %>
      <%= f.input :start_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
      <%= f.input :end_date, as: :string, input_html: { data: { controller: "datepicker" } } %>
      <%= f.input :confirmed %>
      <%= f.submit %>
      <% end %>
      </div>
  </div>
</div>
