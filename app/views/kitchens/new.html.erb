<div class="container mt-4">
  <div class="row">
    <div class="col-6 m-auto">
      <h1>Create a new kitchen</h1>
      <div class="mt-3">
        <%= simple_form_for @kitchen do |f| %>
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :capacity %>
          <%= f.input :price %>
          <%= f.input :equipment %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <div class="d-grid gap-2 col-6 mx-auto"> <%= f.submit class: 'btn btn-light' %> </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
